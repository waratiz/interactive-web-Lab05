{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "types": ["node"],
    "moduleResolution": "Node",
    "verbatimModuleSyntax": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
